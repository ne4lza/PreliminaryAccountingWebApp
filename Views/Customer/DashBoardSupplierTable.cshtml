@using onMuhasebeApp.Models;
@model List<TBL_Suppliers>


<div class="card">
    <div class="card-header pb-0 p-3">
        <h6 class="mb-0">TEDARİKÇİLERİNİZ</h6>
    </div>
    <div class="card-body p-3">
        <ul class="list-group">
            @foreach (var item in Model)
            {
                if (Convert.ToUInt32(Session["company_ID"]) == item.company_ID)
                {
                    <li class="list-group-item border-0 d-flex justify-content-between ps-0 mb-2 border-radius-lg">
                        <div class="d-flex align-items-center">
                            <div class="d-flex flex-column">
                                <h6 class="mb-1 text-dark text-sm">@item.supplier_NAME</h6>
                                <span class="text-xs">@item.supplier_PRODUCTNAME <br /><span class="font-weight-bold">Telefon Numarası: +90 @item.supplier_TELNO</span></span>
                            </div>
                        </div>

                    </li>
                }
            }

        </ul>
    </div>

</div>
