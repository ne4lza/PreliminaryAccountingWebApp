
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}

<main class="main-content  mt-0">
    <section>
        <div class="page-header min-vh-100">
            <div class="container">
                <div class="row">
                    <div class="col-xl-4 col-lg-5 col-md-7 d-flex flex-column mx-lg-0 mx-auto">
                        <div class="card card-plain">
                            <div class="card-header pb-0 text-start">
                                <h4 class="font-weight-bolder">ÇARK ÖN MUHASEBE'YE HOŞGELDİNİZ</h4>
                                <p class="mb-0">Hizmetlerimizden Yararlanmak İçin Lütfen Destek Ekibimizle İletişime Geçin.</p>
                            </div>
                            <div class="card-body">
                                @using (Html.BeginForm("Index", "Login", FormMethod.Post))
                                {


                                <div class="mb-3">
                                    <input type="text" class="form-control form-control-lg" placeholder="Kullanıcı Adınız" aria-label="Email" name="company_USERN">
                                </div>
                                <div class="mb-3">
                                    <input type="password" class="form-control form-control-lg" placeholder="Şifreniz" aria-label="Password" name="company_PASSWORD">
                                </div>
                                <div class="text-center">
                                    <button class="btn btn-lg btn-primary btn-lg w-100 mt-4 mb-0">Giriş Yap</button>
                                </div>
                                }
                            </div>
                            <div class="card-footer text-center pt-0 px-lg-2 px-1">
                                <p class="mb-4 text-sm mx-auto">
                                    İşletme Hesabınız Yok Mu?
                                    <a href="/Login/CompanyRegistration" class="text-primary text-gradient font-weight-bold">Şimdi Kayıt Olun</a>
                                </p>
                            </div>
                        </div>
                    </div>
                    <div class="col-6 d-lg-flex d-none h-100 my-auto pe-0 position-absolute top-0 end-0 text-center justify-content-center flex-column">
                        <div class="position-relative bg-gradient-primary h-100 m-3 px-7 border-radius-lg d-flex flex-column justify-content-center overflow-hidden" style="background-image: url('../../login-form-01/images/bg_1.jpg'); background-size: cover;">
                            <span class="mask bg-gradient-primary opacity-6"></span>
                            <h4 class="mt-5 text-white font-weight-bolder position-relative letter-spacing-3">"Dikkat yeni para birimidir"</h4>
                            <p class="text-white position-relative">ÇARK ÖN MUHASEBE TÜM DİKKATİNİ İŞLETMENİZE VERİR.</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</main>

